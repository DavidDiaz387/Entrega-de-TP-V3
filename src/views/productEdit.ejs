<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('partials/styles.ejs')  %>
    <link rel="stylesheet" href="/stylesheets/app.css">
    <title>Product-Edit</title>
</head>
<body>
    <!--header-->
    <%-include('partials/header.ejs')  %> 
    <!--header-->
    <!--section form-->
    <div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Estás editando: <i><%=productoEncontrado.name%> </i></h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/products/edit/<%= productoEncontrado.id%>?_method=put" method="post">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" value="<%=productoEncontrado.name  %> " class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" value="<%=productoEncontrado.price %>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="text" id="discount" name="discount" value="<%=productoEncontrado.discount %>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<option value="">Elegí</option>
							<option value="in-sale">En oferta</option>
							<option value="visited" >Últimos agregados</option>
						</select>
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" class="form-input" value="<%= productoEncontrado.description %>"></textarea>
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>
    </div>
    
    <!--section form-->
</body>
</html>